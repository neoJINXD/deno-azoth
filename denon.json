{
  "$schema": "https://deno.land/x/denon/schema.json",
  "scripts": {
    "start": {
      "cmd": "src/index.ts",
      "desc": "Runs the bot",
      "allow": [
        "env",
        "read",
        "net"
      ]
    },
    "github": {
      "cmd": "src/github.ts",
      "desc": "Runs the test connection to the github api",
      "allow": [
        "net",
        "write"
      ]
    }
  }
}